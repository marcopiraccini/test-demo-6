{
  "$schema": "https://platformatic.dev/schemas/v0.18.0/db",
  "server": {
    "hostname": "127.0.0.1",
    "port": "3042",
    "logger": {
      "level": "info"
    },
    "cors": {
      "origin": "https://pt-development-dashformatic.fly.dev",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  },
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations"
  },
  "plugins": {
    "paths": [
      "plugin.js"
    ]
  },
  "types": {
    "autogenerate": true
  }
}
