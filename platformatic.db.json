{
  "$schema": "https://platformatic.dev/schemas/v0.18.0/db",
  "server": {
    "hostname": "127.0.0.1",
    "port": "3042",
    "logger": {
      "level": "debug"
    },
    "cors": {
      "origin": "*"
    }
  },
  "core": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations"
  },
  "plugins": {
    "paths": [
      "plugin.js"
    ]
  },
  "types": {
    "autogenerate": true
  }
}
